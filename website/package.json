{
  "name": "lingualink-platform",
  "version": "1.0.0",
  "description": "Modern translation and interpretation platform with single-tenant deployments",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "npm install && npm run setup --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "typecheck": "npm run typecheck --workspaces",
    "db:migrate": "npm run migration:run --workspace=backend",
    "db:seed": "npm run seed --workspace=backend",
    "db:reset": "npm run migration:revert --workspace=backend && npm run migration:run --workspace=backend",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend && npm install --workspace=shared"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "translation",
    "interpretation",
    "platform",
    "single-tenant",
    "react",
    "nestjs",
    "typescript",
    "postgresql"
  ],
  "author": "ELS Development Team <dev@exls.ca>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lingualink-platform"
  }
} 